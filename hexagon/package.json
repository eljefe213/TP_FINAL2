{
  "name": "hexagon",
  "version": "1.0.0",
  "description": "Projet TP 2 : cr√©ation d'une api REST avec typescript avec l'architecture hexagonal",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest --config jest.config.js --runInBand",
    "clear_jest": "jest --clearCache",
    "watch": "tsc -w",
    "dev": "nodemon build/index.js",
    "start:dev": "concurrently \"tsc -w\" \"nodemon build/index.js\"",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration": "npm run typeorm migration:run -- -d ./src/data-source.ts",
    "generate": "drizzle-kit generate pg --config=src/config/drizzle.config.ts",
    "migrate": "tsx -r dotenv/config src/infrastructure/data/migrate.ts",
    "studio": "drizzle-kit studio --config=src/config/drizzle.config.ts"
  },
  "keywords": [],
  "author": "Abdelghani HAMAZ + Youssouph CAMARA + Aicha BOUCHAIKH",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.21.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "10.7.0",
    "tsx": "^4.10.3",
    "typescript": "^5.4.5"
  }
}
